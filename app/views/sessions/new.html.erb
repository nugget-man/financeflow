<h1>Sign in</h1>

<%= form_for :sessions, @sessions, :url => {:action => "create"} do |f| %>
  <p>
    <%= label_tag :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= submit_tag 'Sign in' %>
  </p>
<% end %>
